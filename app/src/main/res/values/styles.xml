<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- InActive Text in BottomNavigationView / Start -->
    <style name="navTextInactive">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/InActive</item>
    </style>
    <!-- InActive Text in BottomNavigationView / End -->


    <!-- Active Text in BottomNavigationView / Start -->
    <style name="navTextActive">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Active</item>
    </style>
    <!-- Active Text in BottomNavigationView / End -->

</resources>
