<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:id="@+id/location_icon_postview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="@color/trans"
                android:gravity="right"
                android:src="@drawable/ic_pin" />

            <TextView
                android:id="@+id/text_view_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="Location"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_view_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0"
                android:text=""
                android:textAlignment="textEnd"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/category_icon_postview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="@color/trans"
                android:gravity="right"
                android:src="@drawable/ic_category" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dk"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
            </ImageView>

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="match_parent"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_location"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:text="description"
                android:layout_weight="1">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/uk"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
            </ImageView>

            <TextView
                android:id="@+id/text_view_description_eng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_below="@id/text_view_location"
                android:layout_marginTop="16dp"
                android:text="EN: 'English description here via. google translate' "
                android:layout_weight="1"
                android:layout_marginEnd="20dp">

            </TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_description"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/googletranslate"
                android:layout_width="161dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom"
                android:layout_margin="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_googletranslate" />

            <ImageButton
                android:id="@+id/btn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_like">

            </ImageButton>

            <TextView
                android:id="@+id/text_view_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:text="like">

            </TextView>

            <ImageButton
                android:id="@+id/btn_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_dislike">

            </ImageButton>

            <TextView
                android:id="@+id/text_view_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="dislike">

            </TextView>


        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>